<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<div class="tag">
<%= form_tag('/tweets', method: 'get') do %>
  <%= label_tag(:genre_key, 'Search genre:') %>
  <%= text_field_tag(:genre_key) %>
  <%= submit_tag('Search') %> <%= link_to 'Clear', tweets_path %>
<% end %>
</div>
<br>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.body %></td>
        <td><%= tweet.genre %></td>
        <audio src= "<%= "#{tweet.file}" %>" controls="">
         <a src= "<%= "#{tweet.file}" %>" >ダウンロード</a>
       </audio>
        
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_tweet_path %>
